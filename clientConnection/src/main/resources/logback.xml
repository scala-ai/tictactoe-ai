<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{HH:mm:ss.SSS} %-5level %-29logger{29} - %msg%n</pattern>
    </encoder>
  </appender>
  <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${log-file:-scala-logging.log}</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- daily rollover -->
      <fileNamePattern>scala-logging.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <!-- or whenever the file size reaches 50MB -->
        <maxFileSize>50MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <!-- keep 10 days' worth of history -->
      <maxHistory>10</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%date{HH:mm:ss.SSS} [%thread] %-5level %-36logger{36} %M - %msg%n</pattern>
    </encoder>
  </appender>
  <logger name="org.deeplearning4j" level="warn"/>
  <logger name="org.nd4j" level="warn"/>
  <logger name="org.reflections" level="warn"/>
  <logger name="de.ai.htwg.tictactoe" level="info"/>
  <root level="info">
    <appender-ref ref="console"/>
    <appender-ref ref="file"/>
  </root>
</configuration>